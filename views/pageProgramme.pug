extends layout

block head
    if ru
        title="Финансовый Конгресс Банка России: Программа"
    else
        title="FINANCIAL CONGRESS OF THE BANK OF RUSSIA: Programme"

    link(rel='stylesheet', href='/static/lib/video-js.min.css')
block content
    include elems/internalHead
    .tower#newsPage
        .subTower
            .oNewsDecor
                include svg/pgmDecor.svg
            .newsDecor2
                include svg/pgmDecor2.svg
            if ru
                .sectionTitle Программа
            else
                .sectionTitle  Programme

            .pgmDownloadBtnWr
                    .pgmDownload.flex.center(onclick="window.open('/static/key/pgm"+lang+"')")
                        if ru
                            .pgmDownloadText Скачать<br>программу
                        else
                            .pgmDownloadText Download<br>the programme
                        .pgmDownloadIco
                            <svg width="52" height="42" viewBox="0 0 52 42" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M48.3999 1L25.6999 27.4L2.8999 1" stroke="#E39A3F" stroke-width="2.4344" stroke-miterlimit="10"/>
                            <path d="M0 40.3H51.3" stroke="#E39A3F" stroke-width="2.4344" stroke-miterlimit="10"/>
                            </svg>



            .pgmWr
                each day in pgm
                    .oPgmItem(id="day"+day.id)
                        .pgmHeadDate #{day["title_"+lang]}
                        .oTimeslots
                            if day.timeslots
                                include elems/timeslots







    include elems/footer
    include elems/mobileMenu

    script(src="/static/javascripts/utils.js")
    script(src="/static/javascripts/mainScript.js")
    script(src="/static/lib/video.min.js")


