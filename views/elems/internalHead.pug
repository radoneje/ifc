.tower.upTarget#internalPageTower
    .internalHead
        include langSelector
        .internalHeadImage
            img.desktop(src="/static/images/internalHeadBg.svg" width="1900" height="371")
            img.mobile(src="/static/images/internalHaedBgMobile.png" width="375" height="160")

        .internalHeadLogoWr.flex.center
            .internalHeadLogo(onclick="document.location.href='/"+lang+"'")
                include ../svg/mainlogo.svg
            .internalHeadText.flex.center
                if ru
                    .internalHeadH1(onclick="document.location.href='/"+lang+"'") Финансовый<br>конгресс<br>Банка&nbsp;России
                else
                    .internalHeadH1(onclick="document.location.href='/"+lang+"'") FINANCIAL<br>CONGRESS<br>OF&nbsp;THE&nbsp;BANK<br>OF&nbsp;RUSSIA
                .internalHeadMenu
                    include mainMenuItems
        .internalH1Wr.mobile
            .mainTitle.flex.center
                .mainLogo(onclick="document.location.href='/"+lang+"'")
                    include ../svg/mainlogo.svg
                .h1Wr.flex
                    if ru
                        h1(onclick="document.location.href='/"+lang+"'") ФИНАНСОВЫЙ<br>КОНГРЕСС<br>БАНКА&nbsp;РОССИИ
                        h2.desktop 6-7 июля 2023<br>Санкт-петербург
                    else
                        h1(onclick="document.location.href='/"+lang+"'") FINANCIAL<br>CONGRESS<br>OF&nbsp;THE&nbsp;BANK&nbsp;OF&nbsp;RUSSIA
                        h2.desktop 6–7 JULY 2023<br>ST.PETERSBURG


            .mobileMenuCloseBtn(onclick="showMobileMenu()")
                include ../svg/mobileMenuBtn.svg
.desktop
    include menu
include upBtn
