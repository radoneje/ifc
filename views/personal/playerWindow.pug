#playerWindow
    #playerLoader
        .videoWr
            .videoWrContent
                .videoWrContentLoader
                    .videoWrContentLoaderBox(style="width:30%")
                        include ../svg/loader.svg
    #playerBox(style="display:none")
        .playerPoster(v-if="!status.status")
            .videoWr
                .videoWrContent
                    if ru
                        img(:src="'/static/image/hi/'+status.poster_ru")
                    else
                        img(:src="'/static/image/hi/'+status.poster_en")

        div(v-else)
            .playerHead
                .playerBtnWr(v-for="hall in halls" v-on:click="activeHall=hall" v-bind:class="{active:activeHall.id==hall.id}")
                    .playerBtn
                        .playerBtnIco
                        .playerBtnText {{hall.halltitle_#{lang}}}
            .playerBody(v-if="activeHall")
                .videoWr
                    iframe.videoWrContent(:src="'/liveplayer/'+activeHall.id+'/'"+lang border="0" allowfullscreen="true" width="1280" height="720")


